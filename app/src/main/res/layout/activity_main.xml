<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:contentDescription="b book Mobile home screen"
    android:contextClickable="false"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/fromDoc"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="152dp"
        android:backgroundTint="#000000"
        android:contentDescription="Send information by selecting a document"
        android:fontFamily="sans-serif"
        android:onClick="docMode"
        android:text="Send Document"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/fromCamera"
        style="@android:style/Widget.Material.Button.Borderless"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginBottom="52dp"
        android:backgroundTint="#000000"
        android:contentDescription="Send information by taking a picture"
        android:fontFamily="sans-serif"
        android:onClick="cameraMode"
        android:text="Send Picture"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/fromDoc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="98dp"
        android:accessibilityLiveRegion="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.176"
        app:srcCompat="@mipmap/ic_launcher_square" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:accessibilityLiveRegion="none"
        android:importantForAccessibility="no"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

</androidx.constraintlayout.widget.ConstraintLayout>